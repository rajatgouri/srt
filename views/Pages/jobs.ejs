<div class="wrapper ">
    <% include ./loder %>

    <% include ./alert %>

    <script>
        const role = '<%= user.role %>';
    </script>

    <div id="mySidenav" class="sidenav ">
        <a class="closebtn" onclick="closeNav()">&times;</a>

    </div>

    <div id="main">

        <div class="modal fade" id="myModal">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">

                    <!-- Modal Header -->
                    <div class="modal-header text-dark bg-primary">
                        <h4 class="modal-title">Bid Here</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>

                    <!-- Modal body -->
                    <div class="modal-body">
                        <form id="bid-form">
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group">
                                        <label for="Bid">Enter Your Bid:</label>
                                        <input class="form-control" type="number" name="bid" id="bid" min="0" required>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        <label for="time">Dilevery Time:</label>
                                        <input class="form-control" type="date" id="time" min="" required>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="form-group">
                                        <label for="proposal">Enter Your Proposal:</label>
                                        <textarea id="proposal" name="proposal" rows="4"
                                            class="form-control" required></textarea>

                                    </div>
                                </div>
                                
                            </div>
                            <button type="submit" class="btn btn-primary">Bid</button>

                        </form>
                    </div>


                </div>
            </div>
        </div>


