<% include ./overview %>

<div class="row mt-3">
    <div class="col-xl-9 mb-2">
        <div class="card ">
            <div class="card-body">
                <div class="clearfix">
                    <div class="float-left">
                        <h4 class="mt-0 header-title mb-5">Monthly Shipments</h4>
                    </div>
                    <div class="float-right">
                    </div>

                </div>
                <div class="row">
                    <div class="col-xl-7 mb-2 shipment-graph">
                        <div>
                            <div id="chart-with-area" class="ct-chart earning ct-golden-section"></div>
                        </div>
                    </div>
                    <div class="col-xl-5 mb-2">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="text-center">
                                    <p class="text-muted mb-4">This month</p>
                                    <h4>$34,252</h4>
                                    <p class="text-muted mb-5">Truck Loads Shipments This Month.</p>
                                    <span class="peity-donut"
                                        data-peity='{ "fill": ["#F7DC5F", "#f2f2f2"], "innerRadius": 28, "radius": 32 }'
                                        data-width="72" data-height="72">4/5</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="text-center">
                                    <p class="text-muted mb-4">Last month</p>
                                    <h4>$36,253</h4>
                                    <p class="text-muted mb-5">Truck Loads Shipments Last Month.</p>
                                    <span class="peity-donut"
                                        data-peity='{ "fill": ["#F7DC5F", "#f2f2f2"], "innerRadius": 28, "radius": 32 }'
                                        data-width="72" data-height="72">3/5</span>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 mb-2">
        <% include ./load-analysis %>
    </div>
</div>

<div class="row  mt-3 ">
    <div class="col-xl-9">
        <div class="card ">
            <div class="card-body shipper-card">
                <h4 class="mt-0 header-title mb-5">Shippers Details</h4>

                <div>
                    <table id="shippers" class="display table" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Address</th>
                                <th>Phone</th>
                                <th>Earning</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
    <div class="col-xl-3">
    </div>

    <div class="modal fade" id="shipper-Modal">
        <div class="modal-dialog">
          <div class="modal-content">
      
            <!-- Modal Header -->
            <div class="modal-header text-dark bg-primary">
              <h4 class="modal-title">Shipper </h4>
              <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
      
            <!-- Modal body -->
            <div class="modal-body ">
              <form>
                <div class="form-group">
                    <label for="name">Name:</label>
                    <input type="text" class="form-control" placeholder="Enter Name" id="name">
                  </div>
                  <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="text" class="form-control" placeholder="Enter Email" id="email">
                  </div>
                  <div class="form-group">
                    <label for="address">Address:</label>
                    <input type="text" class="form-control" placeholder="Enter Address" id="address">
                  </div>
                  <div class="form-group">
                    <label for="phone">Phone:</label>
                    <input type="number" class="form-control" placeholder="Enter Phone" id="phone">
                  </div>
                  
              </form>
            </div>
      
            <!-- Modal footer -->
            <div class="modal-footer">
              <button type="button" class="btn btn-primary">Update Shipper</button>
            </div>
      
          </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="/public/assets/css/admin/shippers.css">
<script src="/public/assets/js/shippers.js"></script>