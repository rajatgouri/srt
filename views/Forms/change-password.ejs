
<form class="form-horizontal m-t-30" id="change-password-form" >

    <input hidden type="email" id="email" class="form-control" id="email" placeholder="Enter Email"  value="<%= email %>" required>

    <div class="form-group">
        <label for="password"  class="small font-weight-bolder">New Password</label>
        <input type="text" id="password" class="form-control" id="password" placeholder="Enter New Password" minlength="8" pattern="((?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[@#$%*]).{8,})" title="Atleast 1 Capital, 1 uppercase, 1 Lowercase and have 8 characters" required>
    </div>

    <div class="form-group">
        <label for="confirm-password"  class="small font-weight-bolder">New Password</label>
        <input type="text" id="confirm-password" class="form-control" id="confirm-password" placeholder="Confirm Password" minlength="8" pattern="((?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[@#$%*]).{8,})" title="Atleast 1 Capital, 1 uppercase, 1 Lowercase and have 8 characters" required>
    </div>

    <div class="form-group row mt-2">
        <div class="col-sm-6 ">
            <button class="btn btn-primary w-md waves-effect waves-light mt-4 change-password-button" type="submit">Reset Password</button>
        </div>
    </div>

</form>