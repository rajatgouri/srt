<form id="payment-form">
    <script>
        var userId = "<%= userId %>"
    </script>
    <div class="row">
        <div class="col-12">

            <select name="plan" class="custom-select plans">
                <option disabled selected>Choose your Best Plan</option>
                <option value="FREE">7 Days/ Free</span></option>
                <option value="79">1 Month/ 79$</span></option>
                <option value="250">3 Months/ 250$</span></option>
                <option value="500">6 Months/ 500$</span></option>
                <option value="750">12 Months/ 750$</span></option>
            </select>


            <div class="stripe-container mt-3">
                <div id="card-element">
                    <!-- Elements will create input elements here -->
                </div>

